    <style>
        .sidebar {
            width: 4.5rem;
            height: 100vh;
            margin-right: 0.5rem
        }

        .bg-primary-dark{
            background-color: #2b2b2b;
        }

        .sidebar .nav-link {
            color: white;
            padding: 1rem 0;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar .profile-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
        }


        .badge-notify {
            position: absolute;
            left: 70%;
            bottom: 40%;
        }

         .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        }

        .avatar-sm {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }

        .avatar-lg {
	        width: 60px;
	        height: 60px;
	        border-radius: 50%;
	        object-fit: cover;
        }

        .avatar-xl {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
        }

        .cursor-pointer {
            cursor: pointer;
        }
    </style>
</head>
<body class="d-flex mb-0 mh-100 bg-primary-dark">
    <div class="d-flex flex-column align-items-center sidebar">
        <div class="mt-3" onclick="openMyProfile(true)">
            <img id="sidebar-avatar" src="https://res.cloudinary.com/ddg2gdfee/image/upload/v1750643519/default_avata_dry3fp.png" alt="Avatar" class="profile-img">
        </div>

        <nav class="nav flex-column text-center mt-4 w-100 h-100">
            <!-- Chat Icon with Badge -->
            <div class="position-relative">
                <a class="nav-link position-relative" href="/">
                    <span class="badge-notify position-absolute translate-middle badge rounded-pill bg-danger">
                        1
                    </span>
                    <i class="bi bi-chat-dots-fill fs-4"></i>
                </a>
            </div>
            <!-- Contact Icon -->
            <div class="position-relative">
                <a class="nav-link position-relative" href="Contact">
                    <span class="badge-notify position-absolute translate-middle badge rounded-pill bg-danger">
                        1
                    </span>
                    <i class="bi bi-person-lines-fill fs-4"></i>
                </a>
            </div>

            <div class="flex-grow-1"></div>
            <!-- Bottom: Settings + Logout  -->
