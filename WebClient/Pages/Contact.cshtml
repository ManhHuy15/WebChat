        }

        function removeFriend(id,message,tab){
            console.log(id);
            // $('#confirmDeleteModal').modal('show');
            $("#friendDetailModal").modal("hide");
            const swalWithBootstrapButtons = Swal.mixin({
              customClass: {
                confirmButton: "btn btn-danger m-2",
				cancelButton: "btn btn-secondary m-2"
              },
              buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
              title: message,
              showCancelButton: true,
              confirmButtonText: "Yes!",
              cancelButtonText: "Cancel!",
              reverseButtons: true
            }).then((result) => {
              if (result.isConfirmed) {
                  removeFriendHandler(id,tab);
              } 
            });
        }

        function sendInvitation(friendId){
            $.ajax({
                url: API_URL + "/api/Friend/add",
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(friendId),
                success: async function (result) {
                    if(result.success){
                        viewFriendDetail(friendId);
                         fetchInvitations();
                         await connection.invoke('Notification',friendId, "send to you a invitation");
                    }else{
				        console.error(result.message);
                    }
                },
                error: function (error) {
                    console.error("Error invitation", error);
                }
            });
        }

        function acceptInvitation(friendId,tab) {
            $.ajax({
                url: API_URL + '/api/Friend/accept',
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(friendId),
                success: async function (result) {
                    if (result.success) {
                        fetchMyFriend();
                       if(tab == 3){
                            viewFriendDetail(friendId);
                        }
                        await connection.invoke('Notification',friendId, "accepted your invitation");
                    } else {
                        console.error('Failed to accept friend request:', result.message);
                    }
                },
                error: function (error) {
                    console.error('Error accepting friend request:', error);
           
                }
            });
        }

        function removeFriendHandler(friendId,tab) {
            $.ajax({
                url: API_URL + '/api/Friend/remove',
                type: 'DELETE',
                contentType: 'application/json',
                data: JSON.stringify(friendId),
                success: function (result) {
                    if (result.success) {
                        if(tab == 1){
                            fetchMyFriend();
                        }else if(tab == 2){
                            fetchInvitations();
                        }else if(tab == 3){
                            viewFriendDetail(friendId);
                            fetchInvitations();
                        }
                    } else {
                        console.error('Failed to remove friend:', result.message);
                    }
                },
                error: function (error) {
                    console.error('Error removing friend:', error);
                }
            });
        }

        function openChatInContact(userId, name, avatar, type) {
            $('#contact-content').addClass('d-none');
            $('#chat-content').removeClass('d-none');
            $("#friendDetailModal").modal("hide");
            openChat(userId, name, avatar, type);
        }
