					    content.empty();
                        console.log(data);

                        var btn = `<button type="button" class="btn btn-sm btn-info shadow-0 w-100" onclick="sendInvitation('${data.userId}') ">
                                        Send Invitation
                                    </button>`
                        if(data.friendStatus == "friend"){
                            btn = `<button type="button" class="btn btn-sm btn-secondary shadow-0 w-100"
                                    onclick="openChatInContact('${data.userId}','${data.fullName}','${data.avatar}',0)">
                                        Send Message
